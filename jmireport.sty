\newcommand{\chapterLabel}[1]{%
    \clearpage
    \lowercase{\def\templabel{#1}}
    \StrSubstitute{\templabel}{ }{-}[\templabel]
    \chapter{#1}\label{ch:\templabel}
}

\WithSuffix\newcommand\chapterLabel*[1]{%
    \clearpage
    \lowercase{\def\templabel{#1}}
    \StrSubstitute{\templabel}{ }{-}[\templabel]
    \chapter*{#1}\label{ch:\templabel}
    \addcontentsline{toc}{chapter}{#1}
}

